extends base

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Send reset link to email
            form.form.form--reset-link
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group
                    button.btn.btn--green Send
    script(src='/JS/login.js')